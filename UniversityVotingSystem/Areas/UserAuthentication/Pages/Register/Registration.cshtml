@page
@model UniversityVotingSystem.webpages.RegistrationModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}



<!Doctype html>
<html>
<head>
    @section head{
    <Title>University Voting System</Title>
    <link rel="stylesheet" href="/css/MainPageStyleSheet.css" />
    }
</head>
<body>
    @section main{
    <div class="div-center">
    <form method="post" asp-page-handler="OnPostAsync" id="register-form">

            <h4>Registration</h4>
            <div class="input-form-part">
                <p>Email address</p>
                <input type="text" placeholder="Enter your email address" name="email"/>
            </div>
            <div class="input-form-part">
                <p>Password</p>
                <input type="text" placeholder="Enter your password" id="password" name="password"/>
            </div>
            <div class="input-form-part">
                <p>Confirm your password</p>
                <input type="text" placeholder="Enter your password" name="password2" />
            </div>
            <div class="input-form-part">
                <p>First name</p>
                <input type="text" placeholder="Enter your first name" name="first_name"/>
            </div>
            <div class="input-form-part">
                <p>Last name</p>
                <input type="text" placeholder="Enter your last name" name="last_name" />
            </div>
            <div class="input-form-part">
                <p>Phone number</p>
                <input type="text" placeholder="Enter your phone number" name="phone_number"/>
            </div>
            <button type="submit">Register</button>

    </form>
    </div>
    <script src="js/jquery-3.7.1.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="~/js/Validation.js"></script>
    }
</body>
</html>